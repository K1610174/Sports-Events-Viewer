@model IEnumerable<SPEvents.Models.EventUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Members</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
               First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Personal Contact 
            </th>
            <th>
                Work Contact
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Address Line 1
            </th>
            <th>
                Address Line 2
            </th>
            <th>
                Postcode
            </th>
            <th>
                City
            </th>
            <th>
                Work Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contactnumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.workcontact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.workplace)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.euid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.euid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.euid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
